<div class="post-img-content">
      <%= image_tag @post.image ,class:"post-box-img" %>
</div>
<div class="owner-btn">
<div class="flex-grid-center">
<%= link_to "物件の編集", edit_post_path(@post.id), method: :get, class: "pure-button fuller-button white" %>
or
<%= link_to "削除", post_path(@post.id), method: :delete, class:"pure-button fuller-button white" %>
</div>
</div>
<table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-post">建物名</th>
          <td class="detail-value"><%= @post.title %></td>
          <th class="detail-post">最寄り駅</th>
          <td class="detail-value"><%= @post.station %></td>
        </tr>
        <tr>
          <th class="detail-post">家賃</th>
          <td class="detail-value"><%= @post.price %>円</td>
          <th class="detail-post">駅からの徒歩</th>
          <td class="detail-value"><%= @post.access %></td>
        </tr>
        <tr>
          <th class="detail-post">間取り</th>
          <td class="detail-value"><%= @post.floor %></td>
          <th class="detail-post">築年数</th>
          <td class="detail-value"><%= @post.construction %></td>
        </tr>
        <tr>
          <th class="detail-post">物件住所</th>
          <td class="detail-value"><%= @post.location %></td>
          <th class="detail-post">建物構造</th>
          <td class="detail-value"><%= @post.build %></td>
        </tr>
        <tr>
          <th class="detail-post">セキュリティー</th>
          <td class="detail-value"><%= @post.security %></td>
          <th class="detail-post">備え付け備品</th>
          <td class="detail-value"><%= @post.equipment %></td>
        </tr>
        <tr>
          <th class="detail-post">設備</th>
          <td class="detail-value"><%= @post.facility %></td>
        </tr>
      </tbody>
    </table>