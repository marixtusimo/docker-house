<!DOCTYPE html>
<html>
  <head>
    <title>housser-app</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all'%>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="area"></div>
    <nav class="main-menu">
            <ul>
                <li>
                  <i class="fa fa-home fa-2x"></i>
                  <%= link_to "Home", root_path, class:"nav-text" %>
                </li>
                <li class="has-subnav">
                  <i class="fa fa-laptop fa-2x"></i>
                  <%= link_to "Home", root_path, class:"nav-text" %>
                </li>
                <li class="has-subnav">
                  <i class="fa fa-list fa-2x"></i>    
                  <%= link_to "Home", root_path, class:"nav-text" %>        
                </li>
                <li class="has-subnav">
                  <i class="fa fa-folder-open fa-2x"></i>
                  <%= link_to "物件一覧", posts_path, class:"nav-text" %>     
                </li>
                <% if owner_signed_in? %>
                <li>
                  <i class="fa fa-pencil fa-2x"></i>
                  <%= link_to "物件を投稿して募集する", new_post_path, class:"nav-text" %>
                </li>
                <% end %>
                <li>
                  <i class="fa fa-users fa-2x"></i>
                  <%= link_to "新規登録（オーナー）", new_owner_registration_path, class:"nav-text" %>
                </li>
                <li>
                  <i class="fa fa-user fa-2x"></i>
                  <%= link_to "新規登録（入居希望者）", new_user_registration_path, class:"nav-text" %>
                </li>
                <li>
                  <i class="fa fa-sign-in fa-2x"></i>
                  <%= link_to "ログイン（オーナー）", new_owner_session_path, class:"nav-text" %>
                </li>
                <li>
                  <i class="fa fa-sign-in fa-2x"></i>
                  <%= link_to "ログイン（入居希望者）", new_user_session_path, class:"nav-text" %>
                </li>
                <li>
                  <i class="fa fa-sign-in fa-2x"></i>
                  <%= link_to 'ゲストログイン（入居希望者）', users_guest_sign_in_path, class:"nav-text", method: :post %>
                </li>
                <li>
                  <i class="fa fa-sign-in fa-2x"></i>
                  <%= link_to 'ゲストログイン(オーナー)', owners_guest_sign_in_path, class:"nav-text", method: :post %>
                </li>
                <% if owner_signed_in? || user_signed_in? %>
                <li>
                <% if owner_signed_in? %>
                  <i class="fa fa-power-off fa-2x"></i>
                  <%= link_to "ログアウト", destroy_owner_session_path ,:method => :delete, class:"nav-text" %>
                <% else user_signed_in? %>
                  <i class="fa fa-power-off fa-2x"></i>
                  <%= link_to "ログアウト", destroy_user_session_path ,:method => :delete, class:"nav-text" %>
                <% end %>
                </li>  
            </ul>
            <% end %>
        </nav>
    <%= yield %>
  </body>
</html>
